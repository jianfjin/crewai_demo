# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Serper API for web search (optional)
SERPER_API_KEY=your_serper_api_key_here

# Environment (development/production)
ENVIRONMENT=development

# CORS Origins (comma-separated) - Leave empty for auto-detection
# Auto-detection works for GitHub Codespaces, Gitpod, Replit, Railway, Vercel, Netlify
CORS_ORIGINS=

# Manual CORS override (use only if auto-detection fails)
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-custom-domain.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# GitHub Codespaces (automatically detected)
# CODESPACE_NAME=your-codespace-name

# Gitpod (automatically detected)
# GITPOD_WORKSPACE_URL=https://workspace-url.gitpod.io

# Other cloud platforms (automatically detected)
# REPLIT_DB_URL=...
# RAILWAY_ENVIRONMENT=...
# VERCEL_URL=...
# NETLIFY_URL=...